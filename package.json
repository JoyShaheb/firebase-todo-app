    "@reduxjs/toolkit": "^1.9.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "firebase": "^10.4.0",
    "icons": "^1.0.0",
    "js-cookie": "^3.0.5",
    "lint-staged": "^14.0.1",
    "lucide-react": "^0.293.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.11.0",
    "react-redux": "^8.1.3",
